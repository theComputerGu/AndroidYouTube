<resources>
    <!-- Light Mode Theme -->
    <style name="AppTheme" parent="Theme.MyApplication">
        <item name="colorPrimary">@color/lightColorPrimary</item>
        <item name="colorPrimaryDark">@color/lightColorPrimaryDark</item>
        <item name="colorAccent">@color/lightColorAccent</item>
        <!-- Add other attributes as needed for light mode -->
    </style>

    <!-- Dark Mode Theme -->
    <style name="AppTheme.Dark" parent="Theme.MyApplication">
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="android:windowBackground">@color/darkBackgroundColor</item> <!-- Set dark background color -->
        <item name="android:textColorPrimary">@color/darkTextColor</item> <!-- Set text color for primary text -->
        <item name="android:textColorSecondary">@color/darkTextColor</item>
    </style>
</resources>
